<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Authored</th>
      <th>Authored at</th>
      <th>Format</th>
      <th>Body</th>
      <th>Data</th>
      <th>Received at</th>
      <th>Received by</th>
      <th>Received by me</th>
      <th>Is received</th>
      <th>Is sent</th>
      <th>Jump</th>
      <th>Destination</th>
      <th>Final destination</th>
      <th>Manifest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.author %></td>
        <td><%= message.authored %></td>
        <td><%= message.authored_at %></td>
        <td><%= message.format %></td>
        <td><%= message.body %></td>
        <td><%= message.data %></td>
        <td><%= message.received_at %></td>
        <td><%= message.received_by %></td>
        <td><%= message.received_by_me %></td>
        <td><%= message.is_received %></td>
        <td><%= message.is_sent %></td>
        <td><%= message.jump %></td>
        <td><%= message.destination_id %></td>
        <td><%= message.final_destination_id %></td>
        <td><%= message.manifest %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

